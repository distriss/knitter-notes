<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
    <div class="col-6">
      <div class="mb-3">
        <h2><%= post.title %></h2> 
        <span>by <%= postAuthor %></span>
        <p><%= post.description %></p>
        <img class="img-fluid" src="<%= post.image%>" />      
        <div class="row justify-content-between">
          <h3 class="col-3">Likes: <%= post.likes %></h3>
            <form
              class="col-1"
              action="/post/likePost/<%= post.id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>                      
        </div>

        <div class="mt-5">
          <h2>Add a comment</h2>
          <form action="/comment/createComment/<%=post._id%>" method="POST">
            <div class="mb-3">
                <label for="Comment" class="form-label">Comment</label>
                <input type="text" class="form-control" id="comment" name="comment">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
    
        <ul>
          <% for(let i=0; i<comments.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <!-- fix this - use different method -->
              <% for(let n=0; n<users.length; n++) { %>
                <% if(String(users[n]._id) === String(comments[i].user)) { %>
                  <p><%= users[n].userName %></p>
                <% } %>
              <%} %>      
              <p>
                <%= comments[i].comment %>
              </p>
            </li>
          <% } %>
        </ul>
        <div class="col-6 mt-5">
          <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>
    </div>

    <div class="col-6">
      <!-- GET edit post -->
      <div class="row justify-content-end">
        <div class="col-1">
          <%if(post.user == user.id){ %>
            <a class="btn btn-primary fa fa-edit" href="/post/editPost/<%= post.id %>"></a>          
          <%}%>
        </div>
      </div>
      <!-- Post Details -->
      <div class="mb-3">
        <h3>Details</h3>

        <table class="table">
          <tr>
            <td>Craft</td>
            <td><%= post.craft %></td>
          </tr>          
          <tr>
            <td>Yarn Weight</td>
            <td><%= post.yarnWeight %></td>
          </tr>
          <tr>
            <td>Needle Size</td>
            <td><%= post.needleSize %></td>
          </tr>
          <tr>
            <td>Gauge</td>
            <td><%= post.gauge %></td>
          </tr>
          <tr>
            <td>Yardage</td>
            <td><%= post.yardage %></td>
          </tr>
          <tr>
            <td>Yarn</td>
            <td><%= post.yarn %></td>
          </tr>          
          <tr>
            <td>Category</td>
            <td><%= post.category %></td>
          </tr>
          <tr>
            <td>Size</td>
            <td><%= post.size %></td>
          </tr>
          <tr>
            <td>Origin</td>
            <td><%= post.origin %></td>
          </tr>
          <tr>
            <td>Created At</td>
            <td><%= post.createdAt %></td>
          </tr>
        </table>

        
      <!-- Pattern -->
      <div class="mb-3">
        <h3>Pattern Instructions</h3>
        <ul>
           <!-- pattern sections-->
        </ul>
      </div>

         <!-- Counters -->
      <%if(post.user == user.id){ %> <!-- later if project == active, not bound to post.user -->
        <div class="mb-3">
          <h4>Counters</h4>

        </div>
      <%}%>
      
    </div>
        
  </div>
</div>

<%- include('partials/footer') -%>
